{
  "name": "cn-decorator",
  "version": "1.0.1",
  "description": "Best way to use BEM with React",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "lint": "eslint ./*.js ./src/ --ext .js,.jsx",
    "test": "karma start",
    "test-benchmark": "NODE_ENV=production BENCHMARK=1 karma start",
    "quality-check": "npm run lint && npm run test",
    "precommit": "npm run quality-check",
    "_changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 -c changelog-config.js",
    "release-patch": "npm version patch -m 'chore(*): patch version'",
    "release-minor": "npm version minor -m 'chore(*): minor version'",
    "release-major": "npm version major -m 'chore(*): major version'",
    "version": "git fetch --tags && npm run _changelog && git add CHANGELOG.md",
    "postversion": "git push origin master && git push --tags && npm run pub",
    "pub-clean": "rm -rf ./.publish",
    "pub-copy": "rsync -a . ./.publish --exclude ./.publish",
    "pub-build": "cd ./.publish && NODE_ENV=production webpack",
    "pub-main": "echo \"module.exports = require('./dist/cn.js');\" > ./.publish/index.js",
    "pub-npmjs": "cd ./.publish && npm publish .",
    "pub": "npm run pub-clean && npm run pub-copy && npm run pub-build && npm run pub-main && npm run pub-npmjs"
  },
  "author": "Good guys from Alfa Laboratory",
  "license": "MIT",
  "dependencies": {
    "bem-cn-fast": "^1.0.2",
    "prop-types": "^15.5.6"
  },
  "devDependencies": {
    "arui-presets": "^2.0.2",
    "babel-core": "^6.4.5",
    "benchmark": "^2.1.2",
    "chai": "^3.5.0",
    "chai-dom": "^1.4.0",
    "chai-spies": "^0.7.1",
    "conventional-changelog-cli": "^1.3.1",
    "eslint": "^3.19.0",
    "husky": "^0.13.3",
    "isparta-loader": "^2.0.0",
    "istanbul": "^0.4.2",
    "karma": "^1.3.0",
    "karma-bench": "^0.1.3",
    "karma-benchmark-reporter": "^0.1.1",
    "karma-chai": "^0.1.0",
    "karma-chai-dom": "^1.1.0",
    "karma-chai-spies": "^0.1.4",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-ios-simulator-launcher": "^0.0.4",
    "karma-junit-reporter": "^1.1.0",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.2.3",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.1",
    "mocha": "^3.0.0",
    "phantomjs-prebuilt": "^2.1.12",
    "react": "^15.5.3",
    "react-dom": "^15.5.3",
    "webpack": "^1.14.0",
    "webpack-merge": "^4.0.0"
  }
}
